  <script src="https://cdn.jsdelivr.net/npm/vue@2.6.12"></script> 
 
   <script>
     let item = 'diamond_sword';
     let lore = '"Made by DOESNT"';
     let lore1text;
     let number = '1';
     numlore = 0;
     let damage = '0';
     let addlore;
     let lore1;
     let lore2;
     let lore3;
     let lore4;
     let lore5;
     let unbreakable = 0;
     let name = 'Made by DOESNT';
     let tag = '{display:{Name:"' + name + '", Lore:["Made by DOESNT",' + lore + ']}}';
     let command = '/give' + ' @p ' + item + ' ' + number + ' ' + damage + ' {' + tag + '}';

     lorecreate.onclick = function()
     {  
         numlore = numlore +1;
         switch (numlore)
         {
            case 1: 
                lore1 = document.getElementById('lore1txt').value;
                lore = '"Made by DOESNT"' + ',"' + lore1 + '"';
                document.getElementById('sp1').value = lore1;
                break;
            case 2:
                lore2 = document.getElementById('lore1txt').value;
                lore = lore + ',"' + lore2 + '"';
                document.getElementById('sp2').value = lore2;
                break;
            case 3:
                lore3 = document.getElementById('lore1txt').value;
                lore = lore + ',"' + lore3 + '"';
                document.getElementById('sp3').value = lore3;
                break;
            case 4:
                lore4 = document.getElementById('lore1txt').value;
                lore = lore + ',"' + lore4 + '"';
                document.getElementById('sp4').value = lore4;
                break;
            case 5:
                lore5 = document.getElementById('lore1txt').value;
                lore = lore + ',"' + lore5 + '"';
                document.getElementById('sp5').value = lore5;
                break;
         }
     }
     unbreakablebtn.onclick = function()
     {
        unbreakable = 1;
     }
     create.onclick = function()
     {
        unbreakable = document.getElementById('Unbreakable');
        item = document.getElementById('predmet').value;
        number = document.getElementById('chislo').value;
        damage = document.getElementById('yron').value;
        name = document.getElementById('imya').value;
        loretext = document.getElementById('lore1txt').value;
        tag = 'display:{Name:"' + name + '", Lore:[' + lore + ']}';
        if(unbreakable = 1)
            {   
                tag = tag + ',Unbreakable:1b'
            }
        command = '/give' + ' @p ' + item + ' ' + number + ' ' + damage + ' {' + tag + '}';
        document.getElementById('echpochmak').value = command;
     }

   </script>
